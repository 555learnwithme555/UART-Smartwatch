<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_weight="0.20">

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/connect"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/rssival"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:text="Maybe: check the device address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:alpha="0.6"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_select"
            android:layout_alignBottom="@+id/btn_select"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/bufferTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fastScrollAlwaysVisible="false"
            android:layout_alignParentStart="true"
            android:text="Buffer:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="3dp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/btn_select" />

        <TextView
        android:id="@+id/listMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fastScrollAlwaysVisible="false"
        android:layout_alignParentStart="true"
        android:text=""
        android:typeface="monospace"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/bufferTitle"
        android:background="@android:color/holo_orange_light" />

        <EditText
            android:id="@+id/sendText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="1"
            android:shadowRadius="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/sendButton"
            android:layout_below="@+id/listMessage"
            android:gravity="bottom" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/send"
            android:layout_alignBottom="@+id/sendText"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>